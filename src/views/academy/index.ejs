        <script>
            const apiKey = '<%= YOUTUBE_API_KEY %>';

            function getYouTubeVideoId(url) {
                const regex = /(?:youtube\.com.*(?:\/|v=)|youtu\.be\/)([a-zA-Z0-9_-]{11})/;
                const match = url.match(regex);
                return match ? match[1] : null;
            }

            function formatDuration(isoDuration) {
                // Converts ISO 8601 duration (e.g., PT1H2M10S) to hh:mm:ss
                const regex = /PT(?:(\d+)H)?(?:(\d+)M)?(?:(\d+)S)?/;
                const [, h = 0, m = 0, s = 0] = isoDuration.match(regex).map(x => parseInt(x) || 0);
                return [h, m, s].map(unit => String(unit).padStart(2, '0')).join(':');
            }

            async function fetchVideoData(videoId) {
                const endpoint = `https://www.googleapis.com/youtube/v3/videos?part=snippet,contentDetails&id=${videoId}&key=${apiKey}`;
                const response = await fetch(endpoint);
                const data = await response.json();
                return data.items && data.items[0] ? data.items[0] : null;
            }

            document.getElementById('youtubeUrl').addEventListener('input', async (e) => {
                const url = e.target.value;
                const videoId = getYouTubeVideoId(url);

                if (videoId) {
                    const videoData = await fetchVideoData(videoId);
                    if (videoData) {
                        const snippet = videoData.snippet;
                        const duration = formatDuration(videoData.contentDetails.duration);

                        // Fill the fields
                        document.getElementById('videoTitle').value = snippet.title;
                        document.getElementById('videoDuration').value = duration;
                        document.getElementById('uploadDate').value = new Date(snippet.publishedAt).toLocaleDateString();

                        const thumbnail = snippet.thumbnails?.medium?.url || snippet.thumbnails?.default?.url;
                        const img = document.getElementById('coverImagePreview');
                        img.src = thumbnail;
                        img.classList.remove('d-none');

                        // Reveal the hidden section
                        document.getElementById('videoDetails').classList.remove('d-none');
                    }
                }
            });
        </script>
        <script>
            document.getElementById('sports_center_id').addEventListener('change', function () {
                const centerId = this.value;

                const courtSelect = document.getElementById('court_id');
                courtSelect.innerHTML = '<option value="">Loading...</option>';

                fetch(`/api/courts/${centerId}`)
                    .then(res => res.json())
                    .then(data => {
                        courtSelect.innerHTML = '<option value="">Select Court</option>';
                        data.forEach(court => {
                            const option = document.createElement('option');
                            option.value = court.id;
                            option.textContent = court.court_name;
                            courtSelect.appendChild(option);
                        });
                    })
                    .catch(err => {
                        courtSelect.innerHTML = '<option value="">Error loading courts</option>';
                        console.error(err);
                    });
            });

            document.getElementById('coverImageInput').addEventListener('change', function (event) {
                const file = event.target.files[0];
                const preview = document.getElementById('coverImagePreview');

                if (file && file.type.startsWith('image/')) {
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        preview.src = e.target.result;
                        preview.classList.remove('d-none');
                    };

                    reader.readAsDataURL(file);
                } else {
                    preview.src = '#';
                    preview.classList.add('d-none');
                }
            });



















