<%- include('../partials/header') %>
    <!-- END #header -->
    <!-- BEGIN #sidebar -->
    <%- include('../partials/sidebar') %>
        <!-- END #sidebar -->
        <!-- BEGIN #content -->
        <div id="content" class="app-content">
            <div class="d-flex align-items-center mb-3">
                <div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active">
                            <%= title %>
                        </li>
                    </ul>
                    <h1 class="page-header mb-0">Manage Academy</h1>
                </div>
                <div class="ms-auto">
                    <button class="btn btn-sm btn-theme" data-bs-toggle="modal" data-bs-target="#modalCoverExample"><i
                            class="fa fa-plus-circle fa-fw me-1"></i> Create Class</button>
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#youtubeModal"><i
                            class="fa fa-upload fa-fw me-1"></i> Upload Tutorial</button>
                    <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#coachModal"><i
                            class="fa fa-user fa-fw me-1"></i> Add Coach</button>
                </div>
            </div>
            <% if (success_msg.length> 0) { %> <div class="alert alert-success">
                    <%= success_msg[0] %>
                </div>
                <% } %>
                    <% if (error_msg.length> 0) { %> <div class="alert alert-danger">
                            <%= error_msg[0] %>
                        </div>
                        <% } %>
                            <div class="card">
                                <ul class="nav nav-tabs nav-tabs-v2 px-4">
                                    <li class="nav-item me-3"><a href="#allTab" class="nav-link active px-2"
                                            data-bs-toggle="tab">Classes</a></li>
                                    <li class="nav-item me-3"><a href="#youtubeTutorial" class="nav-link px-2"
                                            data-bs-toggle="tab">Youtube Tutorials</a>
                                    </li>
                                    <li class="nav-item me-3"><a href="#coachTab" class="nav-link px-2"
                                            data-bs-toggle="tab">Coaches</a></li>
                                    <!-- <li class="nav-item me-3"><a href="#deletedTab" class="nav-link px-2"
                                            data-bs-toggle="tab">Open</a>
                                    </li>
                                    <li class="nav-item me-3"><a href="#deletedTab" class="nav-link px-2"
                                            data-bs-toggle="tab">Closed</a></li>
                                    <li class="nav-item me-3"><a href="#deletedTab" class="nav-link px-2"
                                            data-bs-toggle="tab">Local delivery</a>
                                    </li> -->
                                </ul>
                                <div class="tab-content p-4">
                                    <div class="tab-pane fade show active" id="allTab">
                                        <!-- BEGIN input-group -->
                                        <div class="input-group mb-4">
                                            <div class="flex-fill position-relative">
                                                <div class="input-group">
                                                    <input type="text" class="form-control ps-35px"
                                                        placeholder="Search User">
                                                    <div class="input-group-text position-absolute top-0 bottom-0 bg-none border-0"
                                                        style="z-index: 1020;">
                                                        <i class="fa fa-search opacity-5"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-hover text-nowrap">
                                                <thead>
                                                    <tr>
                                                        <th class="border-top-0 pt-0 pb-2"></th>
                                                        <th class="border-top-0 pt-0 pb-2">Title</th>
                                                        <th class="border-top-0 pt-0 pb-2">Sports Center</th>
                                                        <th class="border-top-0 pt-0 pb-2"> Activity</th>
                                                        <th class="border-top-0 pt-0 pb-2">Activity Date & Time</th>
                                                        <th class="border-top-0 pt-0 pb-2">Duration</th>
                                                        <th class="border-top-0 pt-0 pb-2">Total Joined</th>
                                                        <th class="border-top-0 pt-0 pb-2">Date Created</th>
                                                        <th class="border-top-0 pt-0 pb-2">Date Updated</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (classes.length> 0) { %> <% classes.forEach(academy_class=> {
                                                            %> <tr>
                                                                <td class="w-10px align-middle">
                                                                    <div class="form-check">
                                                                        <input type="checkbox" class="form-check-input"
                                                                            id="product1">
                                                                        <label class="form-check-label"
                                                                            for="product1"></label>
                                                                    </div>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= academy_class.title %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= academy_class.sportsCenter.sports_center_name %>
                                                                </td>
                                                                <td>
                                                                    <%= academy_class.session_activity %>
                                                                </td>
                                                                <td class="align-middle"><span
                                                                        class="badge bg-gray-100 text-black text-opacity-50 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center">
                                                                        <%= new
                                                                            Date(academy_class.activity_date).toLocaleString('en-GB',
                                                                            { day: 'numeric' , month: 'short' ,
                                                                            year: 'numeric' }) %> | <%=
                                                                                academy_class.time_slot %>
                                                                    </span>
                                                                </td>
                                                                <td class="py-1 align-middle">
                                                                    <%= academy_class.session_duration %> Mins
                                                                </td>
                                                                <td class="align-middle"><span
                                                                        class="badge bg-dark-100 text-black text-opacity-50 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center">
                                                                        <%= academy_class.total_students_joined %> / <%=
                                                                                academy_class.num_of_players %>
                                                                    </span>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(academy_class.created_at).toLocaleString('en-GB',
                                                                        { day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(academy_class.updated_at).toLocaleString('en-GB',
                                                                        { day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="15">No Classes found.</td>
                                                                    </tr>
                                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- END table -->
                                        <div class="d-md-flex align-items-center">
                                            <!-- Showing X to Y of Z entries -->
                                            <div class="me-md-auto text-md-left text-center mb-2 mb-md-0"> Showing <%=
                                                    offset + 1 %> to <%= offset + classes.length %> of <%= count %>
                                                            entries </div>
                                            <!-- Pagination Controls -->
                                            <ul class="pagination mb-0 justify-content-center">
                                                <!-- Previous Button -->
                                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="admin/academy/?page=<%= currentPage - 1 %>">Previous</a>
                                                </li>
                                                <!-- Page Numbers -->
                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                        <a class="page-link" href="admin/academy/?page=<%= i %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <!-- Next Button -->
                                                        <li
                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                            <a class="page-link"
                                                                href="admin/academy/?page=<%= currentPage + 1 %>">Next</a>
                                                        </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade show" id="youtubeTutorial">
                                        <!-- BEGIN input-group -->
                                        <div class="input-group mb-4">
                                            <div class="flex-fill position-relative">
                                                <!-- <div class="input-group">
                                                    <input type="text" class="form-control ps-35px"
                                                        placeholder="Search User">
                                                    <div class="input-group-text position-absolute top-0 bottom-0 bg-none border-0"
                                                        style="z-index: 1020;">
                                                        <i class="fa fa-search opacity-5"></i>
                                                    </div>
                                                </div> -->
                                            </div>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-hover text-nowrap">
                                                <thead>
                                                    <tr>
                                                        <th class="border-top-0 pt-0 pb-2"></th>
                                                        <th class="border-top-0 pt-0 pb-2">Video Title</th>
                                                        <th class="border-top-0 pt-0 pb-2">Youtube URL</th>
                                                        <th class="border-top-0 pt-0 pb-2">Video Duration</th>
                                                        <th class="border-top-0 pt-0 pb-2"> Youtube Upload Date</th>
                                                        <th class="border-top-0 pt-0 pb-2">Date Created</th>
                                                        <th class="border-top-0 pt-0 pb-2">Date Updated</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (youtubeVideos.length> 0) { %> <%
                                                            youtubeVideos.forEach(youtubeVideo=> { %> <tr>
                                                                <td class="w-10px align-middle">
                                                                    <div class="form-check">
                                                                        <input type="checkbox" class="form-check-input"
                                                                            id="product1">
                                                                        <label class="form-check-label"
                                                                            for="product1"></label>
                                                                    </div>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= youtubeVideo.video_title %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= youtubeVideo.youtube_url %>
                                                                </td>
                                                                <td>
                                                                    <%= youtubeVideo.video_duration %>
                                                                </td>
                                                                <td>
                                                                    <%= youtubeVideo.upload_date %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(youtubeVideo.created_at).toLocaleString('en-GB',
                                                                        { day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(youtubeVideo.updated_at).toLocaleString('en-GB',
                                                                        { day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="15">No Youtube Video found.</td>
                                                                    </tr>
                                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- END table -->
                                    </div>
                                    <div class="tab-pane fade show" id="coachTab">
                                        <!-- BEGIN input-group -->
                                        <div class="input-group mb-4">
                                            <div class="flex-fill position-relative">
                                                <!-- <div class="input-group">
                                                                                        <input type="text" class="form-control ps-35px"
                                                                                            placeholder="Search User">
                                                                                        <div class="input-group-text position-absolute top-0 bottom-0 bg-none border-0"
                                                                                            style="z-index: 1020;">
                                                                                            <i class="fa fa-search opacity-5"></i>
                                                                                        </div>
                                                                                    </div> -->
                                            </div>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-hover text-nowrap">
                                                <thead>
                                                    <tr>
                                                        <th class="border-top-0 pt-0 pb-2"></th>
                                                        <th class="border-top-0 pt-0 pb-2">First Name</th>
                                                        <th class="border-top-0 pt-0 pb-2">Last Name</th>
                                                        <th class="border-top-0 pt-0 pb-2">Email</th>
                                                        <th class="border-top-0 pt-0 pb-2">Phone</th>
                                                        <th class="border-top-0 pt-0 pb-2">Gender</th>
                                                        <th class="border-top-0 pt-0 pb-2">Address</th>
                                                        <!-- <th class="border-top-0 pt-0 pb-2">Display Picture</th> -->
                                                        <th class="border-top-0 pt-0 pb-2">Date Created</th>
                                                        <th class="border-top-0 pt-0 pb-2">Date Updated</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (coaches.length> 0) { %> <% coaches.forEach(coach=> { %> <tr>
                                                                <td class="w-10px align-middle">
                                                                    <div class="form-check">
                                                                        <input type="checkbox" class="form-check-input"
                                                                            id="coach-<%= coach.id %>">
                                                                        <label class="form-check-label"
                                                                            for="coach-<%= coach.id %>"></label>
                                                                    </div>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= coach.first_name %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= coach.last_name %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= coach.email %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= coach.phone || 'N/A' %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= coach.gender || 'N/A' %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= coach.address || 'N/A' %>
                                                                </td>
                                                                <!-- <td class="align-middle">
                                                                    <% if (coach.display_picture) { %>
                                                                        <img src="<%= coach.display_picture %>"
                                                                            alt="Display Picture" width="40" height="40"
                                                                            style="object-fit: cover; border-radius: 50%;">
                                                                        <% } else { %> No image <% } %>
                                                                </td> -->
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(coach.created_at).toLocaleString('en-GB', {
                                                                        day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(coach.updated_at).toLocaleString('en-GB', {
                                                                        day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="10">No coach found.</td>
                                                                    </tr>
                                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- END table -->
                                    </div>
                                </div>
                            </div>
                            <!-- New row content starts here -->
        </div>
        <!-- END #content -->
        <!-- BEGIN btn-scroll-top -->
        <div class="modal modal-cover fade" id="modalCoverExample">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Create Academy</h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-3"> Fill in the details below to create a new academy session. </p>
                        <form method="POST" action="/admin/academy/create-class" enctype="multipart/form-data"
                            id="create_class">
                            <div class="date-scroll" id="dateScroll"></div>
                            <!-- Time Slots -->
                            <div id="timeSlots" class="time-slots"></div>
                            <hr>
                            <div class="row mb-3">
                                <div class="col-md-12 mb-3">
                                    <label for="sports_center_id" class="form-label"><small>Sports
                                            Center</small></label>
                                    <select id="sports_center_id" name="sports_center_id"
                                        class="form-control form-control-sm" required>
                                        <option value="">Select Sports Center</option>
                                        <% sportsCenter.forEach(center=> { %> <option value="<%= center.id %>">
                                                <%= center.sports_center_name %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label for="coach" class="form-label"><small>Select Coach</small></label>
                                    <select id="sports_center_id" name="coach_id" class="form-control form-control-sm"
                                        required>
                                        <option value="">Select coach</option>
                                        <% coaches.forEach(coach=> { %> <option value="<%= coach.id %>">
                                                <%= coach.first_name %>
                                                    <%= coach.last_name %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label><small>Class Title</small></label>
                                    <input type="text" name="title" placeholder="Class Title"
                                        class="form-control form-control-sm" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label><small>Class Activity</small></label>
                                    <select name="session_activity" class="form-control form-control-sm" required>
                                        <option value="">Select Activity</option>
                                        <option value="padel">Padel</option>
                                        <!-- <option value="snooker">Snooker</option>
                                        <option value="darts">Darts</option> -->
                                        <!-- Add more if needed -->
                                    </select>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label><small>Class Description</small></label>
                                    <textarea name="description" placeholder="Description" rows="3"
                                        class="form-control form-control-sm" required></textarea>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label><small>Session Price (Amount per Person)</small></label>
                                    <input type="number" step="0.01" name="session_price" placeholder="Session Price"
                                        class="form-control form-control-sm" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label><small>Duration (in minutes e.g. 120)</small></label>
                                    <input type="number" name="session_duration" placeholder="Session Duration "
                                        class="form-control form-control-sm" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label><small>Number of Players <span id="players_validation"
                                                style="color: red;"></span></small></label>
                                    <input type="number" name="num_of_players" id="num_of_players"
                                        placeholder="Number of Players" class="form-control form-control-sm" required>
                                </div>
                                <input type="text" name="time_slot" id="time_slot" class="form-control form-control-sm"
                                    hidden required>
                                <div class="col-md-6 mb-3">
                                    <label><small>Activity Date</small></label>
                                    <input type="text" name="activity_date" id="activity_date_hidden"
                                        class="form-control form-control-sm" hidden required>
                                    <!-- Disabled field for display -->
                                    <input type="text" id="activity_date_display" class="form-control form-control-sm"
                                        disabled>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label><small>End Registration Date</small></label>
                                    <input type="text" name="end_registration_date" id="end_registration_date"
                                        class="form-control form-control-sm" hidden required>
                                    <input type="text" id="end_registration_date_display"
                                        class="form-control form-control-sm" disabled>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label><small>Category</small></label>
                                    <select name="category" class="form-control form-control-sm" required>
                                        <option value="">Select Category</option>
                                        <option value="general">General</option>
                                        <option value="networking">Networking</option>
                                        <option value="festivity">Festivity</option>
                                        <option value="fundraising">Fundraising</option>
                                        <option value="Social Night">Social Night</option>
                                    </select>
                                </div>
                                <!-- <div class="col-md-6 mb-3">
                                    <label><small>Class Type</small></label>
                                    <select name="academy_type" class="form-control form-control-sm" required>
                                        <option value="">Select Class Type</option>
                                        <option selected value="private">Private</option>
                                        <option value="public">Public</option>
                                    </select>
                                </div> -->
                                <input type="text" name="academy_type" value="private"
                                    class="form-control form-control-sm" hidden required>
                                <div class="col-md-12 mb-3">
                                    <label><small>Cover Photo</small></label>
                                    <input type="file" class="form-control" id="coverImageInput" name="cover_photo"
                                        accept="image/*" required>
                                </div>
                                <div id="hiddenCourtsContainer"></div>
                                <!-- <input type="text" name="court_id[]" id="court_id" required /> -->
                                <div id="validation_msg" style="color:red;"></div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block w-100"
                                        id="submit_btn">Submit</button>
                                </div>
                            </div>
                        </form>
                        <center>
                            <div class="mt-3">
                                <img id="coverImagePreview" src="#" alt="Image Preview" class="img-fluid rounded d-none"
                                    style="max-height: 250px;" />
                            </div>
                        </center>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal modal-cover fade" id="youtubeModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Upload Youtube Video</h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-3">Paste a YouTube video link to auto-fill session info.</p>
                        <form method="POST" action="/admin/academy/upload-video" enctype="multipart/form-data">
                            <div class="row mb-3">
                                <!-- URL Input: Always Visible -->
                                <div class="col-md-12 mb-3">
                                    <input type="text" id="youtubeUrl" name="youtube_url"
                                        placeholder="YouTube Video URL" class="form-control form-control-sm" required>
                                </div>
                                <!-- Hidden Fields: Shown after link is parsed -->
                                <div id="videoDetails" class="d-none">
                                    <div class="col-md-12 mb-3">
                                        <input type="text" id="videoTitle" name="video_title"
                                            class="form-control form-control-sm" readonly>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <input type="text" id="videoDuration" name="video_duration"
                                            class="form-control form-control-sm" readonly>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <input type="text" id="uploadDate" name="upload_date"
                                            class="form-control form-control-sm" readonly>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <input type="file" class="form-control" id="coverImageInput"
                                            name="youtube_cover" accept="image/*" required>
                                    </div>
                                    <div class="col-md-12">
                                        <button type="submit"
                                            class="btn btn-primary btn-lg btn-block w-100">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- <center>
                            <div class="mt-3">
                                <img id="coverImagePreview" src="#" alt="Image Preview" class="img-fluid rounded d-none"
                                    style="max-height: 250px;" />
                            </div>
                        </center> -->
                    </div>
                </div>
            </div>
        </div>
        <div class="modal modal-cover fade" id="coachModal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Create Coach</h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-3"> Fill in the details below to create a new academy session. </p>
                        <form method="POST" action="/admin/academy/create-coach" enctype="multipart/form-data">
