        <script>
            const baseUrl = 'http://127.0.0.1:8080'; // Replace with your base URL
            let allSlots = [];

            async function fetchSlots(centerId) {
                try {
                    const res = await fetch(`${baseUrl}/api/fetch-slots-admin/${centerId}?game_type=padel`);
                    const data = await res.json();
                    allSlots = data.slots || [];

                    renderDates();
                    if (allSlots.length) renderTimeSlots(allSlots[0]);
                } catch (error) {
                    console.error('Error fetching slots:', error);
                }
            }

            function renderDates() {
                const dateScroll = document.getElementById('dateScroll');
                dateScroll.innerHTML = '';

                allSlots.forEach((slot, index) => {
                    const dateDiv = document.createElement('div');
                    dateDiv.className = `date-card ${index === 0 ? 'active' : ''}`;
                    dateDiv.innerHTML = `
                     <strong>${slot.weekday}</strong>
            <strong>${slot.day}</strong>
            <span>${slot.month}</span>
        `;

                    dateDiv.onclick = () => {
                        document.querySelectorAll('.date-card').forEach(el => el.classList.remove('active'));
                        dateDiv.classList.add('active');

                        // ✅ Set date inputs when date is clicked
                        document.getElementById('activity_date_hidden').value = slot.date;
                        document.getElementById('activity_date_display').value = slot.date;

                        document.getElementById('end_registration_date').value = slot.date;
                        document.getElementById('end_registration_date_display').value = slot.date;

                        // ✅ Load time slots for the chosen date
                        renderTimeSlots(slot);
                    };

                    dateScroll.appendChild(dateDiv);
                });

                // Pre-select the first date on load
                if (allSlots.length > 0) {
                    document.getElementById('activity_date_hidden').value = allSlots[0].date;
                    document.getElementById('activity_date_display').value = allSlots[0].date;

                    document.getElementById('end_registration_date').value = allSlots[0].date;
                    document.getElementById('end_registration_date_display').value = allSlots[0].date;
                    renderTimeSlots(allSlots[0]);
                }
            }



            function renderTimeSlots(slot) {
                const timeSlotsDiv = document.getElementById('timeSlots');
                const selectedTimeSlot = document.getElementById('time_slot');
                const numPlayersInput = document.getElementById('num_of_players');
                const validationMsg = document.getElementById('validation_msg');
                const submitBtn = document.getElementById('submit_btn');
                const container = document.getElementById('hiddenCourtsContainer');

                timeSlotsDiv.innerHTML = '';
                container.innerHTML = '';

                // Reset UI
                selectedTimeSlot.value = '';
                numPlayersInput.value = '';
                numPlayersInput.disabled = true;
                submitBtn.disabled = true;
                validationMsg.textContent = 'Please select a time slot.';

                let currentAllowedPlayers = [];
                let currentAvailableCourts = [];

                // Validator for player input
                numPlayersInput.oninput = () => {
                    const val = parseInt(numPlayersInput.value, 10);

                    if (!selectedTimeSlot.value) {
                        validationMsg.textContent = 'Please select a time slot.';
                        submitBtn.disabled = true;
                        return;
                    }

                    if (!Number.isInteger(val) || !currentAllowedPlayers.includes(val)) {
                        validationMsg.textContent = `Valid number of players for this slot: ${currentAllowedPlayers.join(', ')}`;
                        submitBtn.disabled = true;
                    } else {
                        validationMsg.textContent = '';
                        submitBtn.disabled = false;

                        // Update hidden court inputs based on players needed
                        const courtsNeeded = val / 4; // 4 players per court
                        container.innerHTML = '';
                        currentAvailableCourts.slice(0, courtsNeeded).forEach(c => {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = 'court_id[]';
                            input.value = c.court.id;
                            container.appendChild(input);
                        });
                    }
                };

                slot.times.forEach(timeSlot => {
                    const availableCourts = timeSlot.courts.filter(c => String(c.court_status).toLowerCase() === 'available');
                    if (availableCourts.length === 0) return;

                    const slotDiv = document.createElement('div');
                    slotDiv.className = 'time-slot';
                    slotDiv.innerHTML = `<strong>${timeSlot.time}</strong>`;

                    availableCourts.forEach(courtInfo => {
                        const courtDiv = document.createElement('div');
                        courtDiv.className = 'court';
                        courtDiv.innerHTML = `${courtInfo.court.court_name} - ${courtInfo.court_status}`;
                        slotDiv.appendChild(courtDiv);
                    });

                    const allowed = Array.from({ length: availableCourts.length }, (_, i) => (i + 1) * 4);

                    slotDiv.addEventListener('click', () => {
                        document.querySelectorAll('.time-slot').forEach(el => el.classList.remove('selected'));
                        slotDiv.classList.add('selected');

                        selectedTimeSlot.value = timeSlot.time;
                        currentAllowedPlayers = allowed.slice();
                        currentAvailableCourts = availableCourts.slice();

                        // Default to max players allowed for the slot
                        const defaultPlayers = allowed[allowed.length - 1];
                        numPlayersInput.min = allowed[0];
                        numPlayersInput.max = allowed[allowed.length - 1];
                        numPlayersInput.step = 4;
                        numPlayersInput.value = defaultPlayers;
                        numPlayersInput.disabled = false;

                        // Pre-fill hidden inputs for default selection
                        const courtsNeeded = defaultPlayers / 4;
                        container.innerHTML = '';
                        currentAvailableCourts.slice(0, courtsNeeded).forEach(c => {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = 'court_id[]';
                            input.value = c.court.id;
                            container.appendChild(input);
                        });

                        validationMsg.textContent = '';
                        submitBtn.disabled = false;
                    });

                    timeSlotsDiv.appendChild(slotDiv);
                });
            }


