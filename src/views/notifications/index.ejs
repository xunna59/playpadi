<%- include('../partials/header') %>
    <!-- END #header -->
    <!-- BEGIN #sidebar -->
    <%- include('../partials/sidebar') %>
        <!-- END #sidebar -->
        <!-- BEGIN #content -->
        <div id="content" class="app-content">
            <div class="d-flex align-items-center mb-3">
                <div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active">
                            <%= title %>
                        </li>
                    </ul>
                    <h1 class="page-header mb-0">Manage Notifications</h1>
                </div>
            </div>
            <% if (success_msg.length> 0) { %> <div class="alert alert-success">
                    <%= success_msg[0] %>
                </div>
                <% } %>
                    <% if (error_msg.length> 0) { %> <div class="alert alert-danger">
                            <%= error_msg[0] %>
                        </div>
                        <% } %>
                            <div class="card">
                                <div class="tab-content p-4">
                                    <div class="tab-pane fade show active" id="allTab">
                                        <!-- BEGIN input-group -->
                                        <!-- END input-group -->
                                        <!-- BEGIN table -->
                                        <div id="accordion" class="mb-5">
                                            <p> Manage push notifications. </p>
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="accordion" id="accordionExample">
                                                        <% notifications.forEach((notification, index)=> { %> <div
                                                                class="accordion-item mb-2">
                                                                <h2 class="accordion-header d-flex align-items-center justify-content-between"
                                                                    id="heading<%= index %>">
                                                                    <!-- Accordion button (left) -->
                                                                    <button
                                                                        class="accordion-button collapsed flex-grow-1 text-start"
                                                                        type="button" data-bs-toggle="collapse"
                                                                        data-bs-target="#collapse<%= index %>">
                                                                        <%= notification.title %>
                                                                    </button>
                                                                    <!-- Delete form with icon (right) -->
                                                                    <form
                                                                        action="/admin/notifications/<%= notification.id %>?_method=DELETE"
                                                                        method="POST" class="ms-2">
                                                                        <button type="submit" class="btn btn-sm "
                                                                            onclick="return confirm('Are you sure you want to delete this notification?');">
                                                                            <i class="fa fa-trash"></i>
                                                                            <!-- Bootstrap Icons -->
                                                                        </button>
                                                                    </form>
                                                                </h2>
                                                                <!-- Collapsible content -->
                                                                <div id="collapse<%= index %>"
                                                                    class="accordion-collapse collapse"
                                                                    data-bs-parent="#accordionExample">
                                                                    <div class="accordion-body">
                                                                        <p>
                                                                            <%= notification.description %>
                                                                        </p>
                                                                        <small class="text-muted"> Created at: <%= new
                                                                                Date(notification.created_at).toLocaleString()
                                                                                %>
                                                                        </small>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <% }) %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Pagination -->
                                        <div class="d-md-flex align-items-center mt-3">
                                            <div class="me-md-auto text-md-left text-center mb-2 mb-md-0"> Showing <%=
                                                    offset + 1 %> to <%= offset + notifications.length %> of <%= count
                                                            %> entries </div>
                                            <ul class="pagination mb-0 justify-content-center">
                                                <!-- Previous Button -->
                                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="/admin/notifications?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
                                                </li>
                                                <!-- Page Numbers -->
                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                        <a class="page-link"
                                                            href="/admin/notifications?page=<%= i %>&limit=<%= limit %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <!-- Next Button -->
                                                        <li
                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                            <a class="page-link"
                                                                href="/admin/notifications?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
                                                        </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- New row content starts here -->
        </div>
        <!-- END #content -->
        <!-- BEGIN btn-scroll-top -->
        <%- include('../partials/footer') %>