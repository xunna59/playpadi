<%- include('../partials/header') %>
    <!-- END #header -->
    <!-- BEGIN #sidebar -->
    <%- include('../partials/sidebar') %>
        <!-- END #sidebar -->
        <!-- BEGIN #content -->
        <div id="content" class="app-content">
            <div class="d-flex align-items-center mb-3">
                <div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active">
                            <%= title %>
                        </li>
                    </ul>
                    <h1 class="page-header mb-0">Manage Refunds</h1>
                </div>
            </div>
            <% if (success_msg.length> 0) { %> <div class="alert alert-success">
                    <%= success_msg[0] %>
                </div>
                <% } %>
                    <% if (error_msg.length> 0) { %> <div class="alert alert-danger">
                            <%= error_msg[0] %>
                        </div>
                        <% } %>
                            <div class="card">
                                <div class="tab-content p-4">
                                    <div class="tab-pane fade show active" id="allTab">
                                        <!-- BEGIN input-group -->
                                        <div class="input-group mb-4">
                                            <div class="flex-fill position-relative">
                                                <div class="input-group">
                                                    <input type="text" class="form-control ps-35px"
                                                        placeholder="Search Transaction Reference">
                                                    <div class="input-group-text position-absolute top-0 bottom-0 bg-none border-0"
                                                        style="z-index: 1020;">
                                                        <i class="fa fa-search opacity-5"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END input-group -->
                                        <!-- BEGIN table -->
                                        <div class="table-responsive">
                                            <table class="table table-hover text-nowrap">
                                                <thead>
                                                    <tr>
                                                        <th class="border-top-0 pt-0 pb-2"></th>
                                                        <th class="border-top-0 pt-0 pb-2">Transaction Reference</th>
                                                        <th class="border-top-0 pt-0 pb-2">User</th>
                                                        <th class="border-top-0 pt-0 pb-2">Amount</th>
                                                        <th class="border-top-0 pt-0 pb-2">Reason</th>
                                                        <th class="border-top-0 pt-0 pb-2"> status</th>
                                                        <th class="border-top-0 pt-0 pb-2">Date Created</th>
                                                        <th class="border-top-0 pt-0 pb-2">Last Modified</th>
                                                        <th class="border-top-0 pt-0 pb-2"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (refunds.length> 0) { %> <% refunds.forEach((refund, index)=>
                                                            { %> <tr>
                                                                <td class="w-10px align-middle">
                                                                    <%= index + 1 %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= refund.booking_reference %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= refund.user.first_name %>
                                                                        <%= refund.user.last_name %>
                                                                </td>
                                                                <td> ₦<%= Number(refund.refund_amount).toLocaleString()
                                                                        %>
                                                                </td>
                                                                <td class="align-middle"><span
                                                                        class="badge bg-gray-100 text-black text-opacity-50 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center">
                                                                        <%= refund.reason %> %>
                                                                    </span>
                                                                </td>
                                                                <td class="py-1 align-middle">
                                                                    <% const statusMap={ 'success' : {
                                                                        bgClass: 'bg-success' ,
                                                                        textClass: 'text-success' , label: 'Success'
                                                                        }, 'failed' : { bgClass: 'bg-danger' ,
                                                                        textClass: 'text-danger' , label: 'Failed'
                                                                        }, 'elapsed' : { bgClass: 'bg-secondary' ,
                                                                        textClass: 'text-secondary' , label: 'Elapsed'
                                                                        }, 'pending' : { bgClass: 'bg-warning' ,
                                                                        textClass: 'text-warning' , label: 'Pending' }
                                                                        }; const status=statusMap[refund.status] || {
                                                                        bgClass: 'bg-light' , textClass: 'text-muted' ,
                                                                        label: 'Unknown' }; %>
                                                                        <span
                                                                            class="badge <%= status.bgClass %> text-dark bg-opacity-25 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center">
                                                                            <i
                                                                                class="fa fa-circle <%= status.textClass %> fs-9px fa-fw me-5px"></i>
                                                                            <%= status.label %>
                                                                        </span>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(refund.created_at).toLocaleString('en-GB',
                                                                        { day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(refund.updated_at).toLocaleString('en-GB',
                                                                        { day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                                <td>
                                                                    <% if (refund.eligible==1) { %>
                                                                        <button class="btn btn-sm btn-primary"> Refund ₦
                                                                            <%= Number(refund.refund_amount).toLocaleString()
                                                                                %>
                                                                        </button>
                                                                        <% } %>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="15">No data found.</td>
                                                                    </tr>
                                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- END table -->
                                        <div class="d-md-flex align-items-center">
                                            <!-- Showing X to Y of Z entries -->
                                            <div class="me-md-auto text-md-left text-center mb-2 mb-md-0"> Showing <%=
                                                    offset + 1 %> to <%= offset + refunds.length %> of <%= count %>
                                                            entries </div>
                                            <!-- Pagination Controls -->
                                            <ul class="pagination mb-0 justify-content-center">
                                                <!-- Previous Button -->
                                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="admin/manage-refunds/?page=<%= currentPage - 1 %>">Previous</a>
                                                </li>
                                                <!-- Page Numbers -->
                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                        <a class="page-link" href="admin/manage-refunds/?page=<%= i %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <!-- Next Button -->
                                                        <li
                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                            <a class="page-link"
                                                                href="admin/manage-refunds/?page=<%= currentPage + 1 %>">Next</a>
                                                        </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- New row content starts here -->
        </div>
        <!-- END #content -->
        <!-- BEGIN btn-scroll-top -->
        <%- include('../partials/footer') %>