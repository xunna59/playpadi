                                        <!-- END input-group -->
                                        <!-- BEGIN table -->
                                        <div class="table-responsive">
                                            <table class="table table-hover text-nowrap">
                                                <thead>
                                                    <tr>
                                                        <th class="border-top-0 pt-0 pb-2"></th>
                                                        <th class="border-top-0 pt-0 pb-2">Sports Center Name</th>
                                                        <th class="border-top-0 pt-0 pb-2">Address</th>
                                                        <th class="border-top-0 pt-0 pb-2">Total Courts</th>
                                                        <th class="border-top-0 pt-0 pb-2"> Status</th>
                                                        <th class="border-top-0 pt-0 pb-2">Long/Lat</th>
                                                        <th class="border-top-0 pt-0 pb-2">Games</th>
                                                        <th class="border-top-0 pt-0 pb-2">Date Created</th>
                                                        <th class="border-top-0 pt-0 pb-2">Date Updated</th>
                                                        <th class="border-top-0 pt-0 pb-2">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (sportsCenters.length> 0) { %> <%
                                                            sportsCenters.forEach((sportsCenter, index)=> { %> <tr>
                                                                <td class="w-10px align-middle">
                                                                    <%= index + 1 %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= sportsCenter.sports_center_name %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= sportsCenter.sports_center_address %>
                                                                </td>
                                                                <td>
                                                                    <%= sportsCenter.totalCourts %>
                                                                </td>
                                                                <td class="py-1 align-middle">
                                                                    <% const
                                                                        isEnabled=sportsCenter.sports_center_status==1;
                                                                        const badgeClass=isEnabled ? "bg-teal text-teal"
                                                                        : "bg-danger text-danger-800" ; const
                                                                        iconClass=isEnabled ? "text-teal"
                                                                        : "text-danger" ; const label=isEnabled
                                                                        ? "Enabled" : "Disabled" ; %>
                                                                        <span
                                                                            class="badge <%= badgeClass %> bg-opacity-25 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center">
                                                                            <i
                                                                                class="fa fa-circle <%= iconClass %> fs-9px fa-fw me-5px"></i>
                                                                            <%= label %>
                                                                        </span>
                                                                </td>
                                                                <td class="align-middle"><span
                                                                        class="badge bg-gray-100 text-black text-opacity-50 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center">
                                                                        <%= sportsCenter.longitude %> / <%=
                                                                                sportsCenter.latitude %>
                                                                    </span>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <% if
                                                                        (Array.isArray(sportsCenter.sports_center_games))
                                                                        { %>
                                                                        <%
                                                                            sportsCenter.sports_center_games.forEach(game=>
                                                                            { %> <span class="badge bg-primary me-1">
                                                                                <%= game %>
                                                                            </span>
                                                                            <% }) %>
                                                                                <% } else { %> N/A <% } %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(sportsCenter.createdAt).toLocaleString('en-GB',
                                                                        { day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(sportsCenter.updatedAt).toLocaleString('en-GB',
                                                                        { day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                                <td class="w-10px align-middle">
                                                                    <div class="d-flex align-items-center gap-2">
                                                                        <a href="admin/sports-center/edit-sports-center/<%= sportsCenter.id %>"
                                                                            class="text-primary p-2" title="View">
                                                                            <i class="fas fa-pen"></i>
                                                                        </a>
                                                                        <a href="#" class="text-danger p-2"
                                                                            title="Delete">
                                                                            <i class="fas fa-trash-alt"></i>
                                                                        </a>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="15">No Sports Center found.</td>
                                                                    </tr>
                                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- END table -->
                                        <div class="d-md-flex align-items-center">
                                            <!-- Showing X to Y of Z entries -->
                                            <div class="me-md-auto text-md-left text-center mb-2 mb-md-0"> Showing <%=
                                                    offset + 1 %> to <%= offset + sportsCenters.length %> of <%= count
                                                            %> entries </div>
                                            <!-- Pagination Controls -->
                                            <ul class="pagination mb-0 justify-content-center">
                                                <!-- Previous Button -->
                                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="admin/sports-center/?page=<%= currentPage - 1 %>">Previous</a>
                                                </li>
                                                <!-- Page Numbers -->
                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                        <a class="page-link" href="admin/sports-center/?page=<%= i %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <!-- Next Button -->
                                                        <li
                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                            <a class="page-link"
                                                                href="admin/sports-center/?page=<%= currentPage + 1 %>">Next</a>
                                                        </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- New row content starts here -->
