                                        <!-- END input-group -->
                                        <!-- BEGIN table -->
                                        <div class="table-responsive">
                                            <table class="table table-hover text-nowrap">
                                                <thead>
                                                    <tr>
                                                        <th class="border-top-0 pt-0 pb-2"></th>
                                                        <th class="border-top-0 pt-0 pb-2">Full Name</th>
                                                        <th class="border-top-0 pt-0 pb-2">Email</th>
                                                        <th class="border-top-0 pt-0 pb-2">Phone</th>
                                                        <th class="border-top-0 pt-0 pb-2"> Gender</th>
                                                        <th class="border-top-0 pt-0 pb-2">Account Type</th>
                                                        <th class="border-top-0 pt-0 pb-2">Subscription status</th>
                                                        <th class="border-top-0 pt-0 pb-2">Date Created</th>
                                                        <th class="border-top-0 pt-0 pb-2">Date Updated</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (users.length> 0) { %> <% users.forEach((user, index)=> { %>
                                                            <tr>
                                                                <td class="w-10px align-middle">
                                                                    <%= index + 1 %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= user.first_name %>
                                                                        <%= user.last_name %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= user.email %>
                                                                </td>
                                                                <td>
                                                                    <%= user.phone ? user.phone : "N/A" %>
                                                                </td>
                                                                <td>
                                                                    <%= user.gender ? user.gender : "N/A" %>
                                                                </td>
                                                                <!-- <td class="py-1 align-middle"><span
                                                                        class="badge bg-teal text-teal-800 bg-opacity-25 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center"><i
                                                                            class="fa fa-circle text-teal fs-9px fa-fw me-5px"></i>
                                                                        <%= user.gender ? user.gender : "N/A" %>
                                                                    </span>
                                                                </td> -->
                                                                <td class="align-middle"><span
                                                                        class="badge bg-gray-100 text-black text-opacity-50 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center">
                                                                        <%= user.account_type %>
                                                                    </span>
                                                                </td>
                                                                <td class="py-1 align-middle">
                                                                    <span
                                                                        class="badge <%= user.subscription_status ? 'bg-success' : 'bg-danger' %> text-dark bg-opacity-25 px-2 pt-5px pb-5px rounded fs-12px d-inline-flex align-items-center">
                                                                        <i
                                                                            class="fa fa-circle <%= user.subscription_status ? 'text-success' : 'text-danger' %> fs-9px fa-fw me-5px"></i>
                                                                        <%= user.subscription_status ? "Active"
                                                                            : "InActive" %>
                                                                    </span>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(user.created_at).toLocaleString('en-GB', {
                                                                        day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= new
                                                                        Date(user.updated_at).toLocaleString('en-GB', {
                                                                        day: 'numeric' , month: 'short' ,
                                                                        year: 'numeric' , hour: '2-digit' ,
                                                                        minute: '2-digit' , hour12: true }) %>
                                                                </td>
                                                                <td class="w-10px align-middle">
                                                                    <div class="d-flex align-items-center gap-2">
                                                                        <a href="admin/manage-user/<%= user.id %>"
                                                                            class="text-primary p-2" title="View">
                                                                            <i class="fas fa-eye"></i>
                                                                        </a>
                                                                        <a href="#" class="text-danger p-2"
                                                                            title="Delete">
                                                                            <form
                                                                                action="/admin/delete-user/<%= user.id %>?_method=DELETE"
                                                                                method="POST" class="ms-2">
                                                                                <button type="submit"
                                                                                    class="btn btn-sm "
                                                                                    onclick="return confirm('Are you sure you want to delete this user?');">
                                                                                    <i class="fa fa-trash-alt"></i>
                                                                                    <!-- Bootstrap Icons -->
                                                                                </button>
                                                                            </form>
                                                                        </a>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="15">No users found.</td>
                                                                    </tr>
                                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- END table -->
                                        <div class="d-md-flex align-items-center">
                                            <!-- Showing X to Y of Z entries -->
                                            <div class="me-md-auto text-md-left text-center mb-2 mb-md-0"> Showing <%=
                                                    offset + 1 %> to <%= offset + users.length %> of <%= count %>
                                                            entries </div>
                                            <!-- Pagination Controls -->
                                            <ul class="pagination mb-0 justify-content-center">
                                                <!-- Previous Button -->
                                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="admin/manage-users/?page=<%= currentPage - 1 %>">Previous</a>
                                                </li>
                                                <!-- Page Numbers -->
                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                        <a class="page-link" href="admin/manage-users/?page=<%= i %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <!-- Next Button -->
                                                        <li
                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                            <a class="page-link"
                                                                href="admin/manage-users/?page=<%= currentPage + 1 %>">Next</a>
                                                        </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- New row content starts here -->
        </div>
        <div class="modal modal-cover fade" id="editModalCoverExample">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Create Notification</h3>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-3">Post Notification for your Users</p>
                        <form method="POST" action="/api/notifications/general">
                            <div class="row mb-5">
                                <div class="col-md-12 mb-3">
                                    <label>Title</label>
                                    <input type="text" name="title" placeholder="Title"
                                        class="form-control form-control-sm" required>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label>Message</label>
                                    <textarea name="description" placeholder="Message"
                                        class="form-control form-control-sm" rows="8" required></textarea>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- END #content -->
